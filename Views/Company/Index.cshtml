@model PBL3.Models.Company.HomePageModel
@inject IHttpContextAccessor _httpContextAccessor
@{ 
    
}
<div class='company-content'>
    <div class='company-page text-break'>
        <div class='headers'>
            <div class='headers__logo'>
                <div class='headers__logo__img'>
                    <picture>
                        <img alt="@Model.CompanyName" src="~/images/companies/@Model.AvtLocation" width="100">
                    </picture>
                </div>
            </div>
            <div class='headers__info'>
                <h1 class='headers__info__name'>
                    @Model.CompanyName
                </h1>
                <div class='headers__info__item'>
                    <div class='svg-icon svg-icon--grey headers__info__item-location'>
                        <i class="fa fa-location-dot"></i>
                        @{ string str = "| ";
                            foreach (var item in Model.ListCities)
                            {
                                str += item.CityName + " | ";
                            }
                            <div class='svg-icon__text'>@str</div>
                        }
                    </div>
                    <div class='svg-icon svg-icon--grey headers__info__item-location'>
                        <i class="fa fa-location"></i>
                        @{ str = "| ";
                            foreach (var item in Model.ListSkills)
                            {
                                str += item.SkillName + " | ";
                            }
                            <div class='svg-icon__text'>@str</div>
                        }
                    </div>
                    <div class='svg-icon svg-icon--grey headers__info__item-location'>
                        <i class="fa fa-star"></i>
                        @if (Model.Rate == 0)
                        {
                            <div class='svg-icon__text'>Chưa có đánh giá nào</div>
                        }
                        else
                        {
                            <div class='svg-icon__text'>@Model.Rate.ToString("0.0")</div>
                        }

                    </div>
                </div>
            </div>
            @if (_httpContextAccessor.HttpContext.Session.GetInt32(CommonConstraints.USER_ROLEID) == 1 ||
_httpContextAccessor.HttpContext.Session.GetInt32(CommonConstraints.USER_ROLEID) == 3)
            {
                <div class='headers__actions'>
                    <a id="delete-account" class="login-window button">
                        Đánh giá công ty
                    </a>
                </div>
                <dialog id="confirm-delete" class="site-dialog" style="width: 50%;border-radius:10px;">
                    <header class="dialog-header">
                        <h1>Đánh giá công ty @Model.CompanyName</h1>
                    </header>
                    <div style="display: flex;justify-content: space-around;align-items: center;">
                        <div class="dialog-content">
                            <form class="rating">
                                <label>
                                    <input type="radio" name="stars" value="1" />
                                    <span class="icon">★</span>
                                </label>
                                <label>
                                    <input type="radio" name="stars" value="2" />
                                    <span class="icon">★</span>
                                    <span class="icon">★</span>
                                </label>
                                <label>
                                    <input type="radio" name="stars" value="3" />
                                    <span class="icon">★</span>
                                    <span class="icon">★</span>
                                    <span class="icon">★</span>
                                </label>
                                <label>
                                    <input type="radio" name="stars" value="4" />
                                    <span class="icon">★</span>
                                    <span class="icon">★</span>
                                    <span class="icon">★</span>
                                    <span class="icon">★</span>
                                </label>
                                <label>
                                    <input type="radio" name="stars" value="5" />
                                    <span class="icon">★</span>
                                    <span class="icon">★</span>
                                    <span class="icon">★</span>
                                    <span class="icon">★</span>
                                    <span class="icon">★</span>
                                </label>
                            </form>
                        </div>
                        <div>
                            <p name="star1">1★: Rất Tệ</p>
                            <p name="star2">2★: Tệ</p>
                            <p name="star3">3★: Bình Thường</p>
                            <p name="star4">4★: Tốt</p>
                            <p name="star5">5★: Rất Tốt</p>
                        </div>
                    </div>
                    <div class="btn-group cf" style="width:100%">
                        <form style="width:50%;" id="RatingByStudent">
                            <button class="btn btn-danger" style="width:100%;" onclick="displayRadioValue('@Model.CompanyID')">Đánh giá</button>
                        </form>
                        <button class="btn btn-cancel" id="cancel">Hủy</button>
                    </div>
                </dialog>
            }
        </div>
        <ul class='nav bg-white pt-1 mt-3' style="border-radius: 3px;">
            <li class='nav-item m-0 py-0 px-3 p-md-0'>
                <a data-controller="utm-tracking" class="nav-link me-3 active" style="border-bottom: solid;-webkit-text-stroke-width: medium;border-color: cornflowerblue;">Bài đăng đã duyệt</a>
            </li>
            @if (_httpContextAccessor.HttpContext.Session.GetInt32(CommonConstraints.USER_ROLEID) == 2 &&
