@model PBL3.Models.LoginModel

<div class="row justify-content-md-center" style="padding-top:100px;height:600px;">
    @*<div class="col-md-10">*@
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                Đăng nhập
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                    <p class="text-danger" style="display:contents">*</p>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    <p class="text-danger" style="display:contents">*</p>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Đăng nhập" style="width:100%;"/>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password">Quên mật khẩu?</a>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <img class="" alt="loginDUT" src="..\images\LoginDUT.jpg" style="width: 100%;border-radius: 3px;">
    </div>
</div>
@*</div>*@
