
@inject IHttpContextAccessor _httpContextAccessor

@if (_httpContextAccessor.HttpContext.Session.GetInt32(CommonConstraints.USER_ID) != null)
{
    if (_httpContextAccessor.HttpContext.Session.GetInt32(CommonConstraints.USER_ROLEID) == 1)
    {
        <ul class="navbar-nav">
            <li class="nav-item">
                <button class="dropbtn">
                    @_httpContextAccessor.HttpContext.Session.GetString(CommonConstraints.USER_SUBNAME) @_httpContextAccessor.HttpContext.Session.GetString(CommonConstraints.USER_GIVENNAME)
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="sub-menu4">
                    <ul style="padding-left:0px;">
                        <li><a asp-controller="Admin" asp-action="EditProfile">Tài Khoản</a></li>
                        <li><a asp-controller="Admin" asp-action="PostManager">Quản lí Doanh nghiệp</a></li>
                        <li><a asp-controller="Admin" asp-action="StudentAccountProfileManager">Quản lí Sinh viên</a></li>
                        <li><a asp-controller="Home" asp-action="Logout">Đăng xuất</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    }
    else if (_httpContextAccessor.HttpContext.Session.GetInt32(CommonConstraints.USER_ROLEID) == 2)
    {
        <ul class="navbar-nav">
            <li class="nav-item">
                <button class="dropbtn">
                    @_httpContextAccessor.HttpContext.Session.GetString(CommonConstraints.USER_SUBNAME) @_httpContextAccessor.HttpContext.Session.GetString(CommonConstraints.USER_GIVENNAME)
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="sub-menu4">
                    <ul style="padding-left:0px;">
                        <li><a asp-controller="Company" asp-action="EditProfile">Tài Khoản</a></li>
                        <li><a asp-controller="Company" asp-action="Index">Trang chủ</a></li>
                        <li><a asp-controller="Company" asp-action="CreatePost">Tạo bài đăng mới</a></li>
                        <li><a asp-controller="Company" asp-action="PostSubmitted">Thông báo ứng tuyển</a></li>
                        <li><a asp-controller="Home" asp-action="Logout">Đăng xuất</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    }
    else if (_httpContextAccessor.HttpContext.Session.GetInt32(CommonConstraints.USER_ROLEID) == 3)
    {
        <ul class="navbar-nav">
            <li class="nav-item">
                <button class="dropbtn">
                    @_httpContextAccessor.HttpContext.Session.GetString(CommonConstraints.USER_SUBNAME) @_httpContextAccessor.HttpContext.Session.GetString(CommonConstraints.USER_GIVENNAME)
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="sub-menu4">
                    <ul style="padding-left:0px;">
                        <li><a asp-controller="Student" asp-action="EditProfile">Tài Khoản</a></li>
                        <li><a asp-controller="Student" asp-action="PostApplication">Đã ứng tuyển</a></li>
                        <li><a asp-controller="Home" asp-action="Logout">Đăng xuất</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    }
    else if (_httpContextAccessor.HttpContext.Session.GetInt32(CommonConstraints.USER_ROLEID) == 4)
    {
        <ul class="navbar-nav">
            <li class="nav-item">
                <button class="dropbtn">
                    @_httpContextAccessor.HttpContext.Session.GetString(CommonConstraints.USER_SUBNAME) @_httpContextAccessor.HttpContext.Session.GetString(CommonConstraints.USER_GIVENNAME)
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="sub-menu4">
                    <ul style="padding-left:0px;">
                        <li><a asp-controller="Admin" asp-action="EditProfile">Tài Khoản</a></li>
                        <li><a asp-controller="Admin" asp-action="AdminAccountManager">Quản lí Admin</a></li>
                        <li><a asp-controller="Admin" asp-action="PostManager">Quản lí Doanh nghiệp</a></li>
                        <li><a asp-controller="Admin" asp-action="StudentAccountProfileManager">Quản lí Sinh viên</a></li>
                        <li><a asp-controller="Admin" asp-action="SystemStatistic">Quản lí Hệ thống</a></li>
                        <li><a asp-controller="Home" asp-action="Logout">Đăng xuất</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item" style="width: 100%;display: inline-flex;">
            <a class="nav-link text-light" id="login" asp-controller="Home" asp-action="Login">Đăng nhập</a>
            <a class="nav-link text-light" id="login" asp-controller="Home" asp-action="CompanySignUp">Đăng kí Doanh nghiệp</a>
        </li>
    </ul>
}

